{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "newLine": "LF",
        "target": "ESNext",
        "noEmit": true,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "lib": [
            "es2017",
            "dom",
        ],
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        ".git",
        "node_modules",
        "public"
    ]
}
