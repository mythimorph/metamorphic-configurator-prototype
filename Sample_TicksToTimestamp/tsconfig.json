{
    "compilerOptions": {
        "moduleResolution": "node",
        "newLine": "LF",
        "outDir": "./lib/",
        "target": "es2019",
        "module": "es2020",
        "lib": ["es2020", "DOM", "DOM.Iterable"],
        "sourceMap": true,
        "declaration": true,
        "jsx": "preserve",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "plugins": [
            {
              "name": "ts-lit-plugin",
              "strict": true
            }
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        ".git",
        "node_modules"
    ]
}